@using System.IO;
@using CognitiveServicesDemo.Helpers;
@{
    ViewData["Title"] = "Sentiment Analysis";
}
<h1>@ViewData["Title"]</h1>
<form method="post" asp-controller="Text" asp-action="Sentiment">
    @model TextViewModel
    @if (Model != null)
    {
        <div class="alert alert-success" role="alert">
            @Html.Raw(Model.Result)
        </div>
    }
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Write a text here</label>
        <textarea class="form-control" id="Text" name="Text" rows="5">@if (Model != null) { @Html.Raw(Model.Text) }</textarea>
    </div>
    <div>
        <input type="submit" value="Analyze" class="btn btn-info" />
    </div>
</form>